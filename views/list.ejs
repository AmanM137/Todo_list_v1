<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.2/css/all.css">
  <link rel="stylesheet" href="styles/main.css">
  <title>Todoey</title>
</head>

<body>
  <header>
    <nav class="navbar navbar-expand-custom navbar-mainbg ">

      <div class="collapse navbar-collapse " id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">

          <li class="nav-item">
            <a class="nav-link" href="/"><i class="far fa-calendar-alt"></i>Today</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/work"><i class="far fa-clone"></i>Work</a>
          </li>


        </ul>
      </div>
    </nav>
  </header>

  <main>
    <div class="box" id="heading">
      <h1>
        <%= listTitle %>
      </h1>
    </div>
    <div class="box">

      <%if(locals.listItems){%>
        <% for(var i=0; i < listItems.length; i++){ %>
          <%#listItems.forEach((item,index)=>{ %>
            <div class="item">
              <input type="checkbox" class="checkbox<%=i%> check">
              <p class="checkbox<%=i%>">
                <%= listItems[i] %>
              </p>
            </div>
            <% } }%>
              <form class="item" action="/add" method="post">
                <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
                <button type="submit" name="listSubmit" value=<%=listTitle%>>+</button>
              </form>
    </div>
  </main>
  <footer>Copyright Â© 2023
  </footer>
  <script>
    for (var i = 0; i < document.querySelectorAll(".check").length; i++) {
      document.querySelectorAll("input[type=checkbox]")[i].addEventListener("click", function () {
        var button = this.classList[0];
        console.log(button);
        buttonAnimator(button);
      });
    }
    function buttonAnimator(currentkey) {
      var activebutton = document.querySelector("p." + currentkey);
      console.log(activebutton);
      activebutton.classList.toggle("strike");
    }
  </script>
</body>

</html>